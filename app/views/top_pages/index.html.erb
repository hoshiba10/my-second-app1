<h1>トップページ</h1>
<% if logged_in? %>
    こんにちは、
    <%= current_user.name %>
    さん
    
    <%= form_for(@tweet) do |f| %>
        <%= render 'shared/error_messages', object: f.object %>
        <%= f.text_area :content, placeholder: "今どうしてる？" %>
        <%= f.submit "ツイート" %>
    <% end %>
    
    <h2>ホーム</h2>
    <ul>
    <% if @timelines.any? %>
        <% @timelines.each do |t| %>
            <li><%= t.person.name %> : <%= t.content %></li>
            <br>
        <% end %>
    <% end %>
    </ul>
    
<% else %>
    <%= link_to "アカウント作成", signup_path %>
<% end %>