<h1>サインアップ</h1>

<%= form_for(@person) do |f| %>
    <%= render 'shared/error_messages', object: f.object %>
        <%= f.label :name %>
        <%= f.text_field :name %>
        <br>
        <%= f.label :email %>
        <%= f.text_field :email %>
        <br>
        <%= f.label :sex %>
        <%= f.text_field :sex %>
        <br>
        <%= f.label :password %>
        <%= f.password_field :password %>
        <br>
        <%= f.label :password_confirmation, "パスワード確認" %>
        <%= f.password_field :password_confirmation %>
        <br>
        <%= f.submit "アカウント作成" %>
<% end %>